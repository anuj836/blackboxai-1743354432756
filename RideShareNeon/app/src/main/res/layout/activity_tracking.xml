<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_black">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#80000000">

        <TextView
            android:id="@+id/tvDriverInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver: John Doe - 5 mins away"
            android:textColor="@color/neon_blue"
            android:textSize="16sp"
            style="@style/NeonText"/>

        <TextView
            android:id="@+id/tvVehicleInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Toyota Camry - ABC123"
            android:textColor="@color/text_primary"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btnContactDriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Contact Driver"
            style="@style/NeonButton"/>
    </LinearLayout>
</RelativeLayout>